<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Document</title>

  <%- include('includes/header.ejs') %>


</head>

<body>
  <div class="wrapper">
    <%- include('includes/navigation.ejs') %>
    <div id="content">
      <%- include('includes/navigation_nav.ejs') %>

      <ul class="list-group">
        <% items.forEach(recipe=>{ %>
        <li class="list-group-item list-group-item-action">
          <div class="row">
            <div class="col-6">
              <%= recipe.description %>
            </div>
            <div class="col-md-4 mx-righ">
              <img src="/<%= recipe.imageUrl %>" alt="Responsive image" class="img-fluid" style="max-height: 120px">
            </div>

            <div class="col-2">

              <div class="row my-1">

                <a role="button" class="btn btn-info" href="/update/<%= recipe.id %>/">Обновить</a>

              </div>

              <div class="row my-1">
                  
                  <a class="btn btn-info" href="/description/<%= recipe.id %>/">Описание</a>
  
                </div>
              <div class="row mt-3">
                <form action="/remove/" method="post">
                  <input type="hidden" name="productId" value="<%= recipe.id %>">
                  <button type="submit" class="btn btn-info">Удалить</button>
                </form>
              </div>
            </div>
          </div>
        </li>
        <% }); %>
      </ul>
    </div>
  </div>
  <div class="overlay"></div>
  <%- include('includes/end.ejs') %>

</body>

</html>